{
  "name": "gainforest-ipfs-archiver",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "cli": "ts-node src/main.ts",
    "process-all": "npm run cli process-all",
    "stats": "npm run cli stats",
    "health": "npm run cli health",
    "watch": "nodemon --exec ts-node src/main.ts",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "npm run build && jest tests/e2e",
    "test:performance": "jest tests/performance --detectOpenHandles",
    "test:watch": "jest --watch --selectProjects unit",
    "test:coverage": "jest --coverage --selectProjects unit integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:specific": "jest --testNamePattern",
    "coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint:test": "eslint tests/**/*.ts",
    "format:test": "prettier --write tests/**/*.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testcontainers/postgresql": "^11.5.1",
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/nock": "^10.0.3",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.3.0",
    "nock": "^14.0.9",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "@types/axios": "^0.9.36",
    "@types/fs-extra": "^11.0.4",
    "@types/pg": "^8.15.5",
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.1",
    "knex": "^3.1.0",
    "ora": "^8.2.0",
    "pg": "^8.16.3",
    "table": "^6.9.0"
  }
}
